<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class=" main w-full min-h-screen bg-zinc-900">
        <div class="from p-10 text-white">
            <form  action="/create" method="post">
             
                <input type="text" class=" w-full px-5 py-1 bg-zinc-800 mb-2 rounded-md"
                    placeholder="Title goes here..." name="title">
                <textarea class=" w-full px-5 py-1 bg-zinc-800 resize-none mb-2  rounded-md"
                    placeholder="Enter your Driscipitons...." name="details"></textarea>
                <input type="submit"
                    class=" block mb-5 bg-blue-700 px-5 py-1 flex justify-center items-center rounded-md cursor-pointer sacle:95 "
                    placeholder="submit">
            </form>
        </div>
        <div class="tasks  mt-20 flex flex-wrap items-center gap-3 pl-10">

            <% if (files.length> 0) { %>

                <% files.forEach(function (val) { %>
                    <div class="task  w-auto px-3 py-4 bg-zinc-800 rounded-md">
                           <div class=" flex justify-left mb-2">
                    <img class="w-15 h-15 rounded-full object-cover"  src="/gaurav2.jpg" alt="">
                </div>
               
                        <h1 class="text-white text-3xl tracking-tighter mb-3">
                            <%= val%>
                        </h1>
                        <div class="flex alines-center gap-8 justify-between ">
                            <a class="text-blue-500 ml-1" href="/file/<%= val%>">
                                Read more
                            </a>
                            <a class="text-zinc-500" href="/edit/<%= val%>">edit</a>

                        </div>

                    </div>
                    <% }) %>

                        <% } else { %>

                            <h3 class="bg-zinc-800 p-3 text-white">
                                no task yet
                            </h3>

                            <% } %>





        </div>
    </div>
    </div>
</body>

</html>